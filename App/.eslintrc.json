{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-console": "warn",
        "no-debugger": "warn",
        "prettier/prettier": [
            "warn",
            {
                "endOfLine": "auto",
                "trailingComma": "es5",
                "printWidth": 80,
                "tabWidth": 2,
                "semi": true
            }
        ]
    },
    "ignorePatterns": [
        "src/*.css",
        "src/*.scss",
        "src/*.svg"
    ]
}